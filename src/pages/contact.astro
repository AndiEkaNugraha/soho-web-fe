---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us | Soho Solusi Digital" description="Hubungi kami untuk pertanyaan, dukungan, atau peluang kerja sama. Kami di sini untuk membantu Anda sukses.">
      <!-- banner -->
      <div class="mil-inner-banner mil-p-0-120">
        <div class="mil-banner-content mil-center mil-up">
          <div class="container">
            <ul class="mil-breadcrumbs mil-center mil-mb-60">
              <li><a href="/">Homepage</a></li>
              <li><a href="/contact">Contact</a></li>
            </ul>
            <h1 class="mil-mb-60">Get in touch!</h1>
            <a href="#contact" class="mil-link mil-dark mil-arrow-place mil-down-arrow">
              <span>Send message</span>
            </a>
          </div>
        </div>
      </div>
      <!-- banner end -->

      <!-- map -->
      <div class="mil-map-frame mil-up">
        <div class="mil-map">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.664059103807!2d106.78705142509509!3d-6.175708493811703!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69f7e1f7e03e37%3A0x78bbb495adf6cd9!2sPODOMORO%20CITY!5e0!3m2!1sid!2sid!4v1759582707860!5m2!1sid!2sid" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
      <!-- map end -->

      <!-- contact form -->
      <section id="contact">
        <div class="container mil-p-120-90">
          <h3 class="mil-center mil-up mil-mb-120">Let's <span class="mil-thin">Talk</span></h3>
          <div id="contact-messages" class="mil-mb-30" style="display: none;"></div>
          <form id="contact-form" class="row align-items-center" action="/api/contact" method="POST">
            <div class="col-lg-6 mil-up">
              <input type="text" name="name" placeholder="What's your name" required>
            </div>
            <div class="col-lg-6 mil-up">
              <input type="email" name="email" placeholder="Your Email" required>
            </div>
            <div class="col-lg-6 mil-up">
              <input type="tel" name="phone" placeholder="Your Phone Number">
            </div>
            <div class="col-lg-6 mil-up">
              <input type="text" name="subject" placeholder="Subject">
            </div>
            <div class="col-lg-12 mil-up">
              <textarea name="message" placeholder="Tell us about your project" required></textarea>
            </div>
            <div class="col-lg-8">
              <p class="mil-up mil-mb-30"><span class="mil-accent">*</span> We promise not to disclose your personal information to third parties.</p>
            </div>
            <div class="col-lg-4">
              <div class="mil-adaptive-right mil-up mil-mb-30">
                <button type="submit" class="mil-button mil-arrow-place" id="submit-btn">
                  <span>Send message</span>
                </button>
              </div>
            </div>
          </form>
        </div>
      </section>
      <!-- contact form end -->

      <script is:inline>
        document.addEventListener('DOMContentLoaded', function() {
          const contactForm = document.getElementById('contact-form');
          if (contactForm) {
            contactForm.addEventListener('submit', async function(e) {
              e.preventDefault();
              
              const submitBtn = document.getElementById('submit-btn');
              const messages = document.getElementById('contact-messages');
              const form = e.target;
              
              if (!submitBtn || !messages || !form) return;
              
              const formData = new FormData(form);
              const submitSpan = submitBtn.querySelector('span');
              const originalText = submitSpan.textContent;
              
              // Disable submit button and show loading state
              submitBtn.disabled = true;
              submitSpan.textContent = 'Sending...';
              
              try {
                const response = await fetch('/api/contact', {
                  method: 'POST',
                  body: formData
                });
                
                const result = await response.json();
                
                // Show message
                messages.style.display = 'block';
                if (result.success) {
                  messages.innerHTML = '<div class="alert alert-success" style="padding: 15px; background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; border-radius: 4px; margin-bottom: 20px;">' + result.message + '</div>';
                  form.reset(); // Clear form
                } else {
                  messages.innerHTML = '<div class="alert alert-error" style="padding: 15px; background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; border-radius: 4px; margin-bottom: 20px;">' + result.message + '</div>';
                }
                
                // Scroll to message
                messages.scrollIntoView({ behavior: 'smooth', block: 'center' });
                
              } catch (error) {
                console.error('Error:', error);
                messages.style.display = 'block';
                messages.innerHTML = '<div class="alert alert-error" style="padding: 15px; background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; border-radius: 4px; margin-bottom: 20px;">An error occurred. Please try again later.</div>';
                messages.scrollIntoView({ behavior: 'smooth', block: 'center' });
              } finally {
                // Re-enable submit button
                submitBtn.disabled = false;
                submitSpan.textContent = originalText;
              }
            });
          }
        });
      </script>
</BaseLayout>
